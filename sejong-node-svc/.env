# ----- Server -----
NODE_ENV=development
PORT=8080
CORS_ORIGINS=http://localhost:3000
# ↑ 필요에 따라 프런트엔드 도메인/포트를 쉼표로 추가하세요.


# ----- Database -----
DB_HOST=db
DB_PORT=3306
DB_USER=sejong
DB_PASSWORD=sejong1234
DB_NAME=sejong-catch  
DB_DIALECT=mysql
DB_LOGGING=0
DB_SSL=0
# ↑ 실제 DB 주소/계정/비밀번호가 다르면 DB_HOST·DB_USER·DB_PASSWORD·DB_NAME을 꼭 수정하세요.


# ----- JWT Secrets -----
JWT_ACCESS_SECRET=jwtaccesssecretkey123
JWT_REFRESH_SECRET=jwtrfreshsecretkey456
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
# ↑ 배포 환경에서는 access/refresh 시크릿을 고유 값으로 반드시 교체하세요.


# ----- External Services -----
AUTH_CRAWLER_BASE_URL=http://auth:8081
AUTH_CRAWLER_BASE_URL_FALLBACK=
CRAWLER_TIMEOUT_MS=30000
# ↑ 크롤러 서비스 주소가 다르면 AUTH_CRAWLER_BASE_URL을 변경하세요.


# ----- Security -----
BCRYPT_SALT_ROUNDS=12
SESSION_TTL_MS=604800000
# ↑ 보안 요구사항에 따라 해시 라운드/세션 TTL을 조정하세요.
